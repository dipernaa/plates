<!-- views/plate.ejs -->
<!doctype html>
<html ng-app="myApp">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Plates</title>

    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css"> 
    <link rel="stylesheet" href="/dist/css/plate.css">
    <script src="/bower_components/angular/angular.min.js"></script>
</head>
<body ng-controller="PlateCtrl">

    <% include partials/navbar.ejs %>
    
    <div class="container ng-cloak">
        <!-- messages -->
        <div class="well">
            <div ng-repeat="message in plate.messages">{{message}}</div>
        </div>

        <form name="plateForm" class="form">
            <div class="input-group">
                <input type="text" class="form-control" name="message" placeholder="Enter some Text..." ng-model="plateMessage" ng-pattern="/.{1,160}/" required>
                <span class="input-group-btn">
                    <button class="btn btn-default" type="button" ng-click="sendMessage()">Send</button>
                </span>
            </div>
        </form>
        <br />

        <div class="alert alert-success" ng-if="messageSent && showSuccess">Message Sent!</div>
        <div class="alert alert-danger" ng-if="messageSent && !showSuccess">Message Failed to Send.</div>
    </div>

    <script type="text/javascript">
        var plate = <%- JSON.stringify(plateInfo) %>;
    </script>
    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
    <script src="/dist/js/plate.js"></script>
</body>
</html>